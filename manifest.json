{
  "manifest_version": 3,
  "name": "Boinic Reading",
  "version": "1.0",
  "description": "Bold the initial letters of words for better readability",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}